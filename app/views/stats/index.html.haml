%header
  %h1= "Statistics"
.users
  %header
    %h2= "Total commits for all users"
  - @users.each do |user|
    %li= "User: #{user.name}, Total Commits: #{total_commits_for(user)}"
.yearly
  %header
    %h2= "All commits by year"
  - commits_by_year.each do |year|
    %li= "Year: #{year[0]}, Total Commits: #{year[1]}"
